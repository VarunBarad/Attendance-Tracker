<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ButtonAttendStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:colorButtonNormal">@color/colorAttend</item>
    </style>

    <style name="ButtonSkipStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:colorButtonNormal">@color/colorSkip</item>
    </style>

    <style name="ButtonCancelStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:colorButtonNormal">@color/colorCancel</item>
    </style>
</resources>