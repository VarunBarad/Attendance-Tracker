<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.SpinnerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/colorText</item>
        <item name="android:spinnerItemStyle">@style/SpinnerStyle</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ButtonAttendStyle" parent="Widget.AppCompat.ImageButton">
        <item name="colorButtonNormal">@color/colorAttend</item>
    </style>

    <style name="ButtonSkipStyle" parent="Widget.AppCompat.ImageButton">
        <item name="colorButtonNormal">@color/colorSkip</item>
    </style>

    <style name="ButtonCancelStyle" parent="Widget.AppCompat.ImageButton">
        <item name="colorButtonNormal">@color/colorCancel</item>
    </style>

</resources>
